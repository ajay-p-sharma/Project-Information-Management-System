@model IEnumerable<ProjectInformationManagementSystem.Models.user>

@{
    ViewBag.Title = "ManageUsers";
}

<h2 style="font-family:'Arial Rounded MT'; font:100; text-align:center">Manage Users<br/></h2><br/>

<button class="btn btn-info" type="button" style="margin-bottom:10px; margin-left:30px;"
        onclick="location.href='@Url.Action("Register", "Home")'"> Add New User</button><br />

    <table class="table table-striped table-bordered table-condensed" >
        <thead class="thead-inverse" style="background-color:black; color:white;">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.first_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.last_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.pi_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fund_number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cost_center)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.user_type)
                </th>
                <th></th>
            </tr>
</thead>

        <tbody style="background-color: #fef5e7;">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.first_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.last_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.pi_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fund_number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cost_center)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.user_type)
                    </td>
                    <td>
                        @Html.ActionLink("Edit User", "EditUser", new { id = item.user_id }, new { @class = "btn btn-primary" })

                        @Html.ActionLink("Delete", "DeleteUser", new { id = item.user_id }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
</table>
