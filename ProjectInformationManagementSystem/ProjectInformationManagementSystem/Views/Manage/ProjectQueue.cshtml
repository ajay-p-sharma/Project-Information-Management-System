@model IEnumerable<ProjectInformationManagementSystem.Models.new_project>

@{
    ViewBag.Title = "ProjectQueue";
}

<h2 style="font-family:'Arial Rounded MT'; font:100; text-align:center">Project Queue</h2><br />


    @foreach (var item in Model)
    { <div class="projectQueueDiv">
        
           
                <div class="col-md-1" style = "color:white;">
                    <b><ins>Project #</ins></b> <br>
                    @Html.DisplayFor(modelItem => item.project_id)
                </div>
                <div class="col-md-2" style = "color:white;" >
                    <b><ins>Users</ins></b> <br>
                    @Html.DisplayFor(modelItem => item.investigator_name)<br>
                    @Html.DisplayFor(modelItem => item.lab_head)
                 </div>

                <div  class="col-md-1" style = "color:white;">
                    <b><ins>Service</ins></b> <br>
                    @Html.DisplayFor(modelItem => item.service_requested)
                </div>


                <div class="col-md-2" style = "color:white;">
                    <b><ins>Date</ins></b> <br>
                    @Html.DisplayFor(modelItem => item.date_submitted)
                </div>

                <div class="col-md-2" style = "color:white;">
                    <b><ins>Status</ins></b> <br>
                    @Html.DisplayFor(modelItem => item.current_status)
                </div>
                <div class="col-md-2" style = "color:white;">
                    <b><ins>Completed</ins></b> <br>
                   
                    @Html.DisplayFor(modelItem => item.date_completed)
                    
                </div>

                <div class="col-md-1" style = "color:white;">
                    <b><ins>Cost</ins></b> <br>
                    @Html.DisplayFor(modelItem => item.service_cost)
                </div>

                <div class="col-md-1" style="color:black;" >
                    <b><ins>Options</ins></b> <br>
                    @Html.ActionLink("Edit", "EditProject", new { id = item.project_id }, new { @style = "color:black;" }) |
                    @Html.ActionLink("Details", "ProjectDetails", new { id = item.project_id }, new { @style = "color:black;" })
                    
                </div>
            </div>
    }

           
