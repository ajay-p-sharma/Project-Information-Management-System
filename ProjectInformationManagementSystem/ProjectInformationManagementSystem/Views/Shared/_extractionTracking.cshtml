@model IEnumerable<ProjectInformationManagementSystem.Models.extraction_data>

<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/modernizr-2.6.2.js"></script>


@*JQuery and CSS links for Datatables Export options*@
<script src="~/Scripts/DataTables/dataTables.buttons.min.js"></script>
<script src="~/Scripts/DataTables/buttons.print.min.js"></script>
<script src="~/Scripts/DataTables/buttons.html5.min.js"></script>
<link href="~/Content/DataTables/css/buttons.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/buttons.flash.min.js"></script>


<table class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" sstyle="width:100%;" id="extractionDataTable">
    <thead style="background-color:#2E86C1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.project_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gcl_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sample_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sample_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nucleic_acid_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.concentration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total_volume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total_amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.extraction_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.extracted_by)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.qc_status)
            </th>
        </tr>
    <thead>
 <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.project_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gcl_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sample_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sample_type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nucleic_acid_type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.concentration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_volume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.extraction_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.extracted_by)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.qc_status)
            </td>
        </tr>
    }
    </tbody>


</table>


<script type="text/javascript" charset="utf8">
    $(document).ready( function () {
        $('#extractionDataTable').DataTable({
            
            dom: 'Blfrtip',
            buttons: [
                'copy', 'excel', 'pdf', 'print'
            ]
            
        });
    });

</script>



     

