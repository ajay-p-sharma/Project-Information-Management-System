@model IEnumerable<ProjectInformationManagementSystem.Models.sample_detail>

@if (ViewBag.Error != null)
{
    <div class="alert alert-info" role="alert">
        <strong>@ViewBag.Error</strong>
    </div>
}

<h3 style="font-family:'Arial Rounded MT'; font:100; text-align:center">Query Results</h3>
<table class="table table-striped table-bordered table-condensed">
    <thead class="thead-inverse" style="background-color:black; color:white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.project_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gcl_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sample_id)
            </th>
            <th style="text-align:center; max-width:400px;">
            Options
            </th>
        </tr>
        </thead>
    <tbody style="background-color: #fef5e7;">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.project_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gcl_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sample_id)
                </td>
                <td>

                  @Ajax.ActionLink("Edit", "EditSample", "Manage", new { id = item.sampleRecordId }, new AjaxOptions()
    {
        HttpMethod = "GET",
        UpdateTargetId = "resultArea",
        InsertionMode = InsertionMode.Replace
    }, (object)new { @class = "btn btn-primary", @style = "margin-left:100px; margin-bottom:20px; margin-top:20px;" })

         @Ajax.ActionLink("Delete", "DeleteSample", "Manage", new { id = item.sampleRecordId }, new AjaxOptions()
    {
        HttpMethod = "GET",
        UpdateTargetId = "resultArea",
        InsertionMode = InsertionMode.Replace
    }, (object)new { @class = "btn btn-primary", @style = "margin-left:100px; margin-bottom:20px; margin-top:20px;" })


               @*       @Html.ActionLink("Edit", "EditSample", new { id = item.sampleRecordId }, new { @class = "btn btn-primary" })

    @Html.ActionLink("Delete", "DeleteSample", new { id = item.sampleRecordId }, new { @class = "btn btn-primary" })
            *@
                </td>
            </tr>
        }
        </tbody>
</table>
